### Variables
  set {
    # Super key. Use Mod1 for Alt.
    $mod Mod4

    # Modes
    $default_mode mode "default"
    $resize_mode mode "Resize: (left | up) shrink | (right | down) grow"
    $screenshot_mode mode "Screenshot: (c) copy | (shift+c) save | (s) swappy"
    $menu_mode mode "Menu: (l) lock | (o) logout | (r) reboot | (s) shutdown | (u) suspend"
    $notification_mode mode "Notification: (l) lock | (o) logout | (r) reboot | (s) shutdown | (u) suspend"

    # Cursor
    $cursor_theme Catppuccin-Mocha-Dark-Cursors
    $cursor_size 24

    # Home row direction keys, like vim
    $left h
    $down j
    $up k
    $right l

    # Terminal emulator
    $term wezterm

    # Player
    $player playerctl -p spotify
 
    # Output
    $primary HDMI-A-1
    $secondary eDP-1

    # Launcher
    $menu kickoff

    # Backgrounds
    $default_background /usr/share/backgrounds/catppuccin/street.jpg

    # Locker
    $locker if pgrep swaylock ; then : ; else swaylock ; fi 

    # Colorscheme (catpuccin mocha)
    $rosewater #f5e0dc
    $flamingo  #f2cdcd
    $pink      #f5c2e7
    $mauve     #cba6f7
    $red       #f38ba8
    $maroon    #eba0ac
    $peach     #fab387
    $green     #a6e3a1
    $teal      #94e2d5
    $sky       #89dceb
    $sapphire  #74c7ec
    $blue      #89b4fa
    $lavender  #b4befe
    $text      #cdd6f4
    $subtext1  #bac2de
    $subtext0  #a6adc8
    $overlay2  #9399b2
    $overlay1  #7f849c
    $overlay0  #6c7086
    $surface2  #585b70
    $surface1  #45475a
    $surface0  #313244
    $base      #1e1e2e
    $mantle    #181825
    $crust     #11111b
  }
